<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyTribe" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyTribe" parent="Base.Theme.MyTribe" />


    <style name="create_new_">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="forgot_pass">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="click_here">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:textColor">
            #00A3FF
        </item>

    </style>
    <style name="transparentbottombar" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/bottombar</item>
        <item name="itemIconTint">@color/icon</item>


    </style>

    <style name="Outlinebottomnavigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextColor">@drawable/bottom_nav_item_outline_color</item>
        <item name="itemIconTint">@drawable/bottom_nav_item_outline_color</item>
        <item name="android:background">@color/bottombar</item>


    </style>

    <style name="bottomnavigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextColor">@drawable/bottom_nav_item_outline_color</item>
        <item name="itemIconTint">@drawable/bottom_nav_item_outline_color</item>
        <item name="android:background">@color/bottombar2</item>


    </style>
    <style name="MyEditTextHintStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyEditTextTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
    </style>
</resources>