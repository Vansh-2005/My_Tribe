<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#671935"
    tools:context=".Student.Authentication.Forgot_Password_Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">


        <TextView
            android:id="@+id/DisplayMessage"
            android:layout_width="312dp"
            android:layout_height="35dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="35dp"
            android:text="To reset password \n We'll send you a link on your regestered email address"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/EmailEnterDisplay"
            android:layout_width="136dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:text="Enter Email"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />
        
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:hint="email address"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/login_bg"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        
        <Button
            android:id="@+id/ForgotLinkButton"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_bg"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:textSize="14dp"
            android:text="Send Link" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>